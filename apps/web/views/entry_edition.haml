%nav.entries-menu-wrapper
  %div.entry-wrapper
    %p.header EDIT ENTRY
    %form{action: "/edit/#{@id}", method: "POST"}
      %input.title-box{name: "title", type: "text", value: @entry.title}
      - temp_date = @entry.date
      - local_date = temp_date.localtime
      %input.date-box{name: "date", type: "text", disabled: "true", placeholder: local_date}
      %textarea.content-box{name: "content", type: "text", rows: "10", cols: "30"}= @entry.content
      %div.button-wrapper
        %input.button{type: "submit", value: "Save"}
