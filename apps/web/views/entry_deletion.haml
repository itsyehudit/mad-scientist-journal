%nav.entries-menu-wrapper
  %h2 Are you sure you want to delete this entry?
  %form{action: "/delete/#{@id}", method: "POST"}
    %input{type: "submit", value: "YES"}
  %form{action: "/view/#{@id}"}
    %input{type: "submit", value: "NO"}
  %br
  %table.entry-table
    %tr.entry-table__row
      %td.entry-table__data
        %h1= @entry.title
    %tr.entry-table__row
      %td.entry-table__data
        %h5= @entry.date
    %tr.entry-table__row
      %td.entry-table__data
        %p= @entry.content
