%nav.entries-menu-wrapper
  %div.entry-wrapper
    %div.button-wrapper
      %form.button{action: "/edit/#{@id}"}
        %input{type: "submit", value: "Edit"}
      %form.button{action: "/delete/#{@id}", method: "POST"}
        %input{type: "submit", value: "Delete"}
    %div.entry-title= @entry.title
    - temp_date = @entry.date
    - local_date = temp_date.localtime
    %div.entry-date= local_date
    %div.entry-content= @entry.content
    %div.button-wrapper
      %form.button{action: "/view"}
        %input{type: "submit", value: "Entry list"}
      %form.button{action: "/"}
        %input{type: "submit", value: "Main Menu"}
